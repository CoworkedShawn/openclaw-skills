    },
    "context_management": {
      "session_timeout_minutes": 30,
      "max_concurrent_sessions": 100,
      "context_cleanup_interval_minutes": 15,
      "preserve_failed_attempts": true
    },
    "performance": {
      "cache_intent_analysis_results": true,
      "cache_duration_minutes": 5,
      "enable_batch_processing": false,
      "max_concurrent_routings": 10
    }
  },
  "notification_settings": {
    "log_successful_routings": false,
    "log_failed_routings": true,
    "log_clarification_requests": true,
    "log_fallback_usage": true,
    "alert_on_high_failure_rate": true,
    "failure_rate_threshold": 0.3
  }
