{
  "enabled": true,
  "confidence_threshold": 0.6,
  "fallback_to_general": true,
  "preserve_context": true,
  "max_context_history": 10,
  "auto_learn": false,
  "debugging": false,
  "skill_timeout_ms": 30000,
  "retry_failed_routing": false,
  "log_all_interactions": true,
  "advanced_settings": {
    "intent_analysis": {
      "enable_context_boosting": true,
      "enable_learning_from_corrections": false,
      "minimum_confidence_for_auto_routing": 0.8,
      "require_confirmation_for_destructive_actions": true
    },
    "skill_selection": {
      "prefer_recently_used_skills": true,
      "avoid_recently_failed_skills": true,
      "fallback_chain_length": 3,
